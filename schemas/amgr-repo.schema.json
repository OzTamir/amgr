{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/oztamir/amgr/main/schemas/amgr-repo.schema.json",
  "title": "amgr Repo Configuration",
  "description": "Schema for amgr repo.json files",
  "type": "object",
  "required": ["name", "use-cases"],
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON schema reference"
    },
    "name": {
      "type": "string",
      "description": "Name of the agents repository",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "description": "Description of the repository"
    },
    "version": {
      "type": "string",
      "description": "Version of the repository",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "author": {
      "type": "string",
      "description": "Author or maintainer of the repository"
    },
    "use-cases": {
      "type": "object",
      "description": "Registry of available use-cases",
      "additionalProperties": {
        "type": "object",
        "required": ["description"],
        "properties": {
          "description": {
            "type": "string",
            "description": "Description of the use-case"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
